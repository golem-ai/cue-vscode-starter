{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cue Export",
            "type": "shell",
            "command": "echo ${fileExtname} | grep -E '^\\.cue$' || (bash -c \"read -p 'This task only works on .cue files, ${fileBasename} is not supported. Press enter to continue'\" ; false) && cue export --out json $(grep -E 'package \\S+' ${file} | sed -E 's/package (.+)/:\\1/') > /tmp/cue.json || (bash -c \"read -p 'Press enter to continue'\" ; false) && code /tmp/cue.json",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "close": true
            },
            "problemMatcher": {
                "owner": "cue",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "^(\\S.+):",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s+\\./([^:]+[.]cue):(\\d+):(\\d+)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                ]
            }
        },
        {
            "label": "Cue Export File",
            "type": "shell",
            "command": "echo ${fileExtname} | grep -E '^\\.cue$' || (bash -c \"read -p 'This task only works on .cue files, ${fileBasename} is not supported. Press enter to continue'\" ; false) && cue export --out json ${file}  > /tmp/cue.json || (bash -c \"read -p 'Press enter to continue'\" ; false) && code /tmp/cue.json",
            "options": {
                "cwd": "${fileDirname}",
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "close": true
            },
            "problemMatcher": {
                "owner": "cue",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "^(\\S.+):",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s+\\./([^:]+[.]cue):(\\d+):(\\d+)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                ]
            }
        },
        {
            "label": "Cue Format File",
            "type": "shell",
            "command": "echo ${fileExtname} | grep -E '^\\.cue$' || (bash -c \"read -p 'This task only works on .cue files, ${fileExtname} is not supported. Press enter to continue'\" ; false) && cue fmt ${file}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "close": true
            },
            "problemMatcher": {
                "owner": "cue",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "^(\\S.+):",
                        "message": 1
                    },
                    {
                        "regexp": "^\\s+\\./([^:]+[.]cue):(\\d+):(\\d+)",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                ]
            }
        },
    ]
}